10 REM Simple Number Guessing Game
20 PRINT "NUMBER GUESSING GAME"
30 PRINT
40 PRINT "I'M THINKING OF A NUMBER"
50 PRINT "BETWEEN 1 AND 100"
60 PRINT
70 REM Generate random number (using time-based seed)
80 N = INT(RND(1) * 100) + 1
90 T = 0
100 REM Main game loop
110 T = T + 1
120 PRINT "GUESS #"; T; ":";
130 INPUT G
140 IF G = N THEN GOTO 200
150 IF G < N THEN PRINT "TOO LOW!"
160 IF G > N THEN PRINT "TOO HIGH!"
170 GOTO 110
200 PRINT
210 PRINT "CORRECT! YOU GOT IT IN "; T; " TRIES!"
220 PRINT
230 PRINT "PLAY AGAIN (Y/N)";
240 INPUT A$
250 IF A$ = "Y" THEN GOTO 30
260 PRINT "THANKS FOR PLAYING!"
270 END
