10 REM ENHANCED PRIME SIEVE WITH TIMING
20 REM MULTIPLE ITERATIONS FOR BENCHMARKING
30 PRINT "PRIME SIEVE STRESS TEST"
40 PRINT
50 REM Fixed range for benchmark consistency
60 N = 1000
70 PRINT "RANGE: 2 TO "; N
80 PRINT
90 PRINT "NUMBER OF ITERATIONS:";
100 INPUT R
110 IF R < 1 OR R > 100 THEN GOTO 90
120 PRINT
130 PRINT "INITIALIZING..."
140 DIM P(N)
150 PRINT "RUNNING "; R; " ITERATIONS..."
160 PRINT
170 REM Run multiple iterations
180 FOR T = 1 TO R
190 REM Initialize array
200 FOR I = 2 TO N
210 P(I) = 1
220 NEXT I
230 REM Sieve algorithm
240 FOR I = 2 TO INT(SQR(N))
250 IF P(I) = 0 THEN GOTO 290
260 FOR J = I * I TO N STEP I
270 P(J) = 0
280 NEXT J
290 NEXT I
300 REM Count primes
310 C = 0
320 FOR I = 2 TO N
330 IF P(I) = 1 THEN C = C + 1
340 NEXT I
350 PRINT "ITERATION "; T; ": "; C; " PRIMES"
360 NEXT T
370 PRINT
380 PRINT "BENCHMARK COMPLETE!"
390 PRINT "TOTAL ITERATIONS: "; R
400 PRINT "PRIMES FOUND: "; C
410 END
